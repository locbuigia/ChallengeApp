<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register_fragment"
    tools:context="group5.tcss450.uw.edu.challengeapp.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="51dp" />

        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="109dp"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/usernameText1"
            android:layout_toStartOf="@+id/usernameText1"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:id="@+id/usernameText1"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/usernameText1"
            android:layout_alignStart="@+id/usernameText1"
            android:layout_marginTop="36dp"
            android:id="@+id/passwordText1" />

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordTextConfirm"
            android:layout_alignLeft="@+id/passwordTextConfirm"
            android:layout_alignStart="@+id/passwordTextConfirm"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="45dp"
            android:id="@+id/submitButton2" />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_below="@+id/passwordText1"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginTop="57dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextConfirm"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/passwordText1"
            android:layout_alignStart="@+id/passwordText1" />

        <CheckBox
            android:text="Show Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordText1"
            android:layout_alignLeft="@+id/passwordText1"
            android:layout_alignStart="@+id/passwordText1"
            android:id="@+id/showPasswordRegister" />
    </RelativeLayout>

</FrameLayout>

